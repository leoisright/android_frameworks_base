<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="none"
    android:overScrollMode="ifContentScrolls"
    >
	<LinearLayout
	       android:orientation="vertical"
	       android:layout_width="fill_parent"
	       android:layout_height="fill_parent"
	       android:background="#00000000">
	    <RelativeLayout android:id="@+id/relativeLayout1" android:layout_margin="10dip" android:layout_width="match_parent" android:layout_height="wrap_content">
		 <TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="16dip"
			android:text="@string/text_volume_control"
			android:id="@+id/divider_text_volume"
			android:layout_marginLeft="8dip"
			android:layout_alignParentTop="true">
		</TextView>
		
		<ImageView android:src="@drawable/divider"
			android:layout_height="4dip"
			android:layout_width="match_parent"
			android:layout_marginBottom="8dip"
			android:id="@+id/divider_image_volume"
			android:layout_below="@+id/divider_text_volume">
		</ImageView>
		
		<Switch
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/divider_image_volume"
		    android:id="@+id/silent_ring_switch"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			android:layout_marginTop="8dip"
		    android:text="@string/text_ringtone"
			android:textSize="20dip" >
		</Switch>

		<SeekBar android:id="@+id/ringtone_seekbar"
			 android:layout_width="match_parent"
			 android:layout_height="wrap_content"
			 android:layout_below="@+id/silent_ring_switch"
			 android:layout_marginLeft="8dip"
			 android:layout_marginRight="8dip"
			 android:layout_alignParentLeft="true">
		</SeekBar>

		<TextView android:layout_alignParentLeft="true"
			android:text="@string/text_media"
			android:textSize="20dip"
            android:textColor="#ffffffff"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/ringtone_seekbar"
			android:layout_marginTop="8dip"
			android:id="@+id/media_title">
		</TextView>

		<SeekBar android:id="@+id/media_seekbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/media_title"
			android:layout_marginLeft="8dip"
			android:layout_marginRight="8dip"
			android:layout_alignParentLeft="true">
		</SeekBar>

		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="16dip"
			android:text="@string/text_media_control"
			android:id="@+id/divider_text_media"
			android:layout_marginTop="24dip"
			android:layout_marginLeft="8dip"
			android:layout_below="@+id/media_seekbar">
		</TextView>
		
		<ImageView android:src="@drawable/divider"
			android:layout_height="4dip"
			android:layout_width="match_parent"
			android:layout_marginBottom="8dip"
			android:id="@+id/diviver_image_media"
			android:layout_below="@+id/divider_text_media">
		</ImageView>
		
		<LinearLayout android:id="@+id/linearLayout1" android:layout_below="@+id/diviver_image_media" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true">
			<ImageButton android:src="@drawable/ic_media_previous"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_marginLeft="16dip"
				android:layout_marginRight="16dip"
				android:id="@+id/imageView1">
			</ImageButton>
			<ImageButton android:src="@drawable/ic_media_play"
				 android:layout_width="0dp"
				 android:layout_height="wrap_content"
				 android:layout_weight="1"
				 android:layout_marginLeft="16dip"
				 android:layout_marginRight="16dip"
				 android:id="@+id/imageView2">
			</ImageButton>
			<ImageButton android:src="@drawable/ic_media_pause"
				 android:layout_width="0dp"
				 android:layout_height="wrap_content"
				 android:layout_weight="1"
				 android:layout_marginLeft="16dip"
				 android:layout_marginRight="16dip"
				 android:id="@+id/imageView3">
			</ImageButton>
			<ImageButton android:src="@drawable/ic_media_next"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_marginLeft="16dip"
				android:layout_marginRight="16dip"
				android:id="@+id/imageView4">
			</ImageButton>
		</LinearLayout>
	    </RelativeLayout>	    
	</LinearLayout>
</ScrollView>
